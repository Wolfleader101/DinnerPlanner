<Window x:Class="DinnerPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DinnerPlanner"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <DataGrid Name="MenuPlan"
                  ItemsSource="{Binding}"
                  AutoGenerateColumns="False"
                  Margin="0,0,0,240">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Monday"
                                    Binding="{Binding Mon}" />
                <DataGridTextColumn Header="Tuesday"
                                    Binding="{Binding Tues}" />
                <DataGridTextColumn Header="Wednesday"
                                    Binding="{Binding Wed}" />
                <DataGridTextColumn Header="Thursday"
                                    Binding="{Binding Thurs}" />
                <DataGridTextColumn Header="Friday"
                                    Binding="{Binding Fri}" />
                <DataGridTextColumn Header="Saturday"
                                    Binding="{Binding Sat}" />
                <DataGridTextColumn Header="Sunday"
                                    Binding="{Binding Sun}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="random"
                Content="Random Meals"
                HorizontalAlignment="Left"
                Margin="10,189,0,0"
                VerticalAlignment="Top"
                Width="93"
                Click="random_Click" />
        <TextBox x:Name="mealText"
                 Text="Enter a meal"
                 HorizontalAlignment="Left"
                 Height="23"
                 Margin="568,190,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120" />
        <ListBox x:Name="MealBox"
                 HorizontalAlignment="Left"
                 Height="144"
                 Margin="568,245,0,0"
                 VerticalAlignment="Top"
                 Width="120">

            <TextBlock Text="{Binding NewMeal}" />
        </ListBox>
        <Button x:Name="add"
                Content="Add"
                HorizontalAlignment="Left"
                Margin="707,189,0,0"
                VerticalAlignment="Top"
                Width="75"
                Click="Add_Meal" />
        <TextBlock x:Name="AddedMeals"
                   HorizontalAlignment="Left"
                   Height="22"
                   Margin="567,223,0,0"
                   TextWrapping="Wrap"
                   Text="Added Meals:"
                   VerticalAlignment="Top"
                   Width="121" />
        <Button x:Name="Delete"
                Content="Delete"
                HorizontalAlignment="Left"
                Margin="707,245,0,0"
                VerticalAlignment="Top"
                Width="75"
                Click="Delete_Meal" />
    </Grid>
</Window>