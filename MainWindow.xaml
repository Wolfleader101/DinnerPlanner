<Window x:Class="DinnerPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DinnerPlanner"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <DataGrid Name="MenuPlan"
                  ItemsSource="{Binding}"
                  AutoGenerateColumns="False"
                  Margin="0,0,0,240">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Monday"
                                    Binding="{Binding Mon}" />
                <DataGridTextColumn Header="Tuesday"
                                    Binding="{Binding Tues}" />
                <DataGridTextColumn Header="Wednesday"
                                    Binding="{Binding Wed}" />
                <DataGridTextColumn Header="Thursday"
                                    Binding="{Binding Thurs}" />
                <DataGridTextColumn Header="Friday"
                                    Binding="{Binding Fri}" />
                <DataGridTextColumn Header="Saturday"
                                    Binding="{Binding Sat}" />
                <DataGridTextColumn Header="Sunday"
                                    Binding="{Binding Sun}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="save"
                Content="Save"
                HorizontalAlignment="Left"
                Margin="10,184,0,0"
                VerticalAlignment="Top"
                Width="75"
                Click="save_Click" />

        <Button x:Name="random"
                Content="Random Meals"
                HorizontalAlignment="Left"
                Margin="10,209,0,0"
                VerticalAlignment="Top"
                Width="93"
                Click="random_Click" />
        <TextBox x:Name="mealText"
                 Text="Enter a meal"
                 HorizontalAlignment="Left"
                 Height="23"
                 Margin="568,190,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120" />
        <ListBox x:Name="listBox"
                 HorizontalAlignment="Left"
                 Height="100"
                 Margin="302,190,0,0"
                 VerticalAlignment="Top"
                 Width="100">

            <TextBlock Text="{Binding NewMeal}" />
        </ListBox>
    </Grid>
</Window>